  title Dashboard Customers 
  script(src='js/main.js')
  body 
    .layout 
      .sidebar
        .sidebar__logo
          button.sidebar__logo-icon
            img(src="/images/icon-logo.png" alt="Dashboard")
          h2.sidebar__logo-title Dashboard
          p.sidebar__logo-version v.01
        nav.sidebar__category
          -
            var menuItems = [
              { icon: 'dashboard', label: 'Dashboard', link: '#' },
              { icon: 'product', label: 'Product', link: '#', hasSubmenu: true },
              { icon: 'users', label: 'Customers', link: '#', hasSubmenu: true },
              { icon: 'money', label: 'Income', link: '#', hasSubmenu: true },
              { icon: 'promote', label: 'Promote', link: '#', hasSubmenu: true },
              { icon: 'help', label: 'Help', link: '#', hasSubmenu: true }
            ]

          each item in menuItems
            a.sidebar__category-item(href=item.link, class=item.active ? 'sidebar__category-item--active' : '')
              .sidebar__category-text
                img.sidebar__category-icon(src=`/images/icon-${item.icon}.png` alt=item.label)
                span.sidebar__category-label= item.label
              if item.hasSubmenu
                img.sidebar__category-arrow(src="/images/icon-arrow.png" alt="Submenu")
        .sidebar__person
          img.sidebar__person-icon(src="/images/icon-person.png" alt="Person")
          .sidebar__person-info
            p.sidebar__person-name Evano 
            p.sidebar__person-role Project Manager
      .main
        .main__top
          button.main__sidebar-icon
            img(src="/images/icon-logo.png" alt="Toggle Sidebar")
          h1.main__title 
            | Hello Evano
