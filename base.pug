            | ,
        .main__box
          .main__box-head
            .main__head-text
              h1.main__head-total All Customers
              p.main__head-active Active Members
            .main__search-bar
              img.main__search-icon(src="/images/icon-search.png" alt="Search")
              input.main__search-input(type="text" placeholder="Search")
